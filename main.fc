options( bank_count: 16, bank: -1 );

include header ( "macro.asm" );

use game;

include('character.chr');
include('bg_base.chr');
include('text.chr');
include('item.chr');

function main():void
{
	ppu_lock();
	mmc3_init();
	ppu_init();
	bg_init();
	en_init();

	APU_INTERRUPT = 0x40; // disable APU IRQ
	MMC3_MIRROR = 1; // horizontal
	MMC3_RAM_PROTECT = 0b10000000;
	
	game_main();
}

