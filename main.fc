options( bank_count: 16, bank: -1 );

include header ( "macro.asm" );
include( "main.asm" );

use * from common;
use game;
use en;
use my;

include('character.chr');
include('bg_base.chr');
include('text.chr');
include('item.chr');

function main():void
{
	ppu.lock();
	mmc3.init();
	ppu.init();
	bg.init();
	en.init();
	my.init();

	nes.APU_INTERRUPT = 0x40; // disable APU IRQ
	mmc3.MIRROR = 1; // horizontal
	mmc3.RAM_PROTECT = 0b10000000;
	
	game.start();
}

